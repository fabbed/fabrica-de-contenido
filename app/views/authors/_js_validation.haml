=# render :partial => "shared/js_custom_validators"

- content_for :javascript do
  :javascript
    $(document).ready(function() {
      var validator = $("##{form_id}").validate({
        rules: {
          "author[name]": {
            required: true,
            minlength: 5,
            maxlength: 100
          },
          "author[country_id]": {
            required: true
          },
          "author[gender]": {
            required: true
          },

          "author[surname]": {
            required: true,
            maxlength: 10,
            time: true
          },

          "author[password]": {
            required: true,
            minlength: 5
          },
          "author[password_confirmation]": {
            required: true,
            minlength: 4,
            equalTo: "#author_password"
          },
          "author[email]": {
            required: true,
            email: true,
            minlength: 4,
            //remote: $("#author_validation_link").attr('value')
          }
        
        },
        messages: {
          "author[name]": {
            required: "Name requiered",
            minlength: "Min",
            maxlength: "Max"
          },
          "author[surname]": {
            required: "Name requiered",
            minlength: "Min",
            maxlength: "Max"
        },
        "author[password]": {
          required: "Pon tu contraseña",
          rangelength: jQuery.format("Enter at least {0} characters")
        },
        "author[password_confirmation]": {
          required: "Pon la misma contraseña que arriba.",
          equalTo: "Pon la misma contraseña que arriba."
        },
        "author[email]": {
          required: "Pon tu correo",
          email: "Pon un correo valido.",
          remote: jQuery.format("{0} ya esta regsitrado, toma otro email")
        },
        "author[gender]": {
          required: "Eres mujer o hombre?"
        },
        "author[country_id]": {
          required: "En que Pais vives?"
        },
        "city": {
          required: "Pon el nombre de tu ciudad o pueblo. No vamos a mostrar el nombre de tu ciudad en tu perfil."
        },
        "author[terms_accepted]": {
          required: "Debes estar de acuerdo con los terminos de uso."
        }}
        
        
      });
    });
